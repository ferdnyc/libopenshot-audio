@PACKAGE_INIT@

include(CMakeFindDependencyMacro)
find_dependency(ZLIB REQUIRED)

if (UNIX AND NOT APPLE)
  find_dependency(ALSA REQUIRED)
  if (NOT TARGET ALSA::ALSA)
    add_library(ALSA::ALSA UNKNOWN IMPORTED)
    set_target_properties(ALSA::ALSA PROPERTIES
      INTERFACE_INCLUDE_DIRECTORIES "${ALSA_INCLUDE_DIR}"
      IMPORTED_LOCATION "${ALSA_LIBRARIES}")
  endif()
endif()

include(FeatureSummary)
set_package_properties(OpenShotAudio PROPERTIES
  URL "https://github.com/OpenShot/libopenshot-audio"
  DESCRIPTION "OpenShot Audio Library")

include(${CMAKE_CURRENT_LIST_DIR}/OpenShotAudioTargets.cmake)

